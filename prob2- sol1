ALGORITHM pb1-sol1
var 
    ar1 : ARRAY_OF INTEGER[4];
    ar2 : ARRAY_OF INTEGER[5];
    i,j : INTEGER;
    sum : INTEGER := 0;
    match : BOOLEAN;
BEGIN
    FOR i FROM 0 TO arr1.length-1 DO
        Read(arr1[i]);
    END_FOR
    FOR i FROM 0 TO arr2.length-1 DO
        Read(arr2[i]);
    END_FOR
    FOR i FROM 0 TO arr1.length-1 DO
        match := false;
        FOR J FROM 0 TO arr2.length-1 DO
            IF arr1[i] =arr2[j]; THEN
                match := true;BREAK;
            END_IF
        END_FOR
        IF match = true THEN 
            sum := sum+arr1[i];
        END_IF
    END_FOR
    FOR i FROM 0 TO arr2.length-1 DO
        match := false;
        FOR J FROM 0 TO arr1.length-1 DO
            IF arr1[i] =arr2[j]; THEN
                match := true;
                BREAK;
            END_IF
        END_FOR
        IF match = true THEN 
            sum := sum+arr2[i];
        END_IF
    END_FOR
     Write("The sum of all overlapping elements is : ",sum);
END